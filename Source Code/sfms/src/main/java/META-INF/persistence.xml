<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.sample.sfms.entity.AnswerEntity</class>
        <class>com.sample.sfms.entity.CourseEntity</class>
        <class>com.sample.sfms.entity.CriteriaEntity</class>
        <class>com.sample.sfms.entity.DepartmentEntity</class>
        <class>com.sample.sfms.entity.FeedbackEntity</class>
        <class>com.sample.sfms.entity.InfoEntity</class>
        <class>com.sample.sfms.entity.LecturerEntity</class>
        <class>com.sample.sfms.entity.MajorEntity</class>
        <class>com.sample.sfms.entity.OptionEntity</class>
        <class>com.sample.sfms.entity.PrivilegeEntity</class>
        <class>com.sample.sfms.entity.PrivilegeroleEntity</class>
        <class>com.sample.sfms.entity.QuestionEntity</class>
        <class>com.sample.sfms.entity.RoleEntity</class>
        <class>com.sample.sfms.entity.TypeEntity</class>
        <class>com.sample.sfms.entity.UserinformationEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/capstone"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value=""/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
